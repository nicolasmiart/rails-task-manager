<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Task: <%= @task.title %></h1>
  <%= link_to '<i class="fa-solid fa-pencil"></i> Edit this task'.html_safe, edit_task_path(@task), class: "btn btn-primary" %>
</div>
<p class="alert alert-secondary"><%= @task.details %></p>
<p><%= @task.completed ? '<i class="fa-regular fa-square-check"></i> This task is completed'.html_safe : '<i class="fa-regular fa-square"></i> This task is not completed yet'.html_safe %></p>
<hr class="my-4">
<%= link_to '<i class="fa-solid fa-arrow-rotate-left"></i> Back to list'.html_safe, tasks_path, class: 'text-decoration-none' %>
