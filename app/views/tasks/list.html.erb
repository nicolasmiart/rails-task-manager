<h1 class="mb-3">My Tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex align-items-center">
      <%= task.completed ? '<i class="fa-regular fa-square-check me-2"></i> '.html_safe : '<i class="fa-regular fa-square me-2"></i> '.html_safe %>
      <%= link_to task.title , task_path(task), class: 'text-decoration-none' %>
      <div class="ms-auto">
        <%= link_to '<i class="fa-solid fa-trash-can text-danger"></i>'.html_safe,
          task_path(task),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
    </li>
  <% end %>
</ul>
<hr class="my-4">
<%= link_to '<i class="fa-solid fa-plus"></i> Add a new task'.html_safe, tasks_new_path, class: 'text-decoration-none' %>
